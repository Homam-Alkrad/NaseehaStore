@model NaseehaStore.Models.Data.Course

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Course</title>
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        center a {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete Course</h1>
        <p>Are you sure you want to delete this course?</p>

        <div class="course-details">
            <p><strong>Course Name:</strong> @Model.CourseName</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Price with Booklet:</strong> @Model.Price دينار</p>
        </div>

        <form asp-action="ConfirmDelete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn danger">Delete</button>
            <a asp-action="Index" class="btn">Cancel</a>
        </form>
    </div>
</body>
</html>
