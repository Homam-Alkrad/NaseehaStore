@model NaseehaStore.Models.Data.Order

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Order</title>
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <div class="delete-order-container">
        <h1>Delete Order</h1>
        <p>Are you sure you want to delete this order?</p>

        <div class="order-details">
            <p>Order ID: <strong>@Model.Id</strong></p>
            <p>Course Name: <strong>@Model.Course.CourseName</strong></p>
            <p>Price: <strong>@Model.Price دينار</strong></p>
            <p>Student Name: <strong>@Model.Student.FullName</strong></p>
        </div>

        <form asp-action="ConfirmDelete" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/Order/Index" class="btn">Cancel</a>
        </form>
    </div>
</body>
</html>
